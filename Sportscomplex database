CREATE DATABASE sportscomplex;
USE sportscomplex;
CREATE TABLE customer(
customer_id int PRIMARY KEY,
customer_name varchar(20),
email varchar(30));

ALTER TABLE customer ADD age INT;
ALTER TABLE customer MODIFY email VARCHAR(50);
ALTER TABLE customer RENAME COLUMN age TO customer_age;
ALTER TABLE customer DROP COLUMN customer_age;
ALTER TABLE customer DROP COLUMN age;
ALTER TABLE customer ADD CONSTRAINT chk_age CHECK (age >= 18);
ALTER TABLE customer DROP CONSTRAINT chk_age;
